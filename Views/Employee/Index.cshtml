@model IEnumerable<dynamic>;

<!--add a title to the page-->
   @{
    ViewBag.Title = "Index";
}

<h1 class="display-2">Employees</h1>

<!--Create button to add a new employee-->
<a asp-action="Create" class="btn btn-primary">Create New</a>

<!--Table of list of employees-->
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DepartmentName</td>
                <td>
                    <!--Edit and Delete buttons-->
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
 </table>
